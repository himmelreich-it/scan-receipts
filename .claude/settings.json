{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Bash(python -m ruff check:*)",
      "Bash(uv run behave :*)",
      "Bash(PYTHONPATH=src uv run behave:*)",
      "Bash(ls :*)",
      "Bash(npx pyright:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue develop:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr comment:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(mkdir :*)",
      "Bash(mv :*)",
      "Bash(touch :*)"    
    ],
    "ask": [
        "Bash(rm :*)",
        "Bash(rmdir :*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)"
    ]
  }
}